.side
  .side__bar
    .side__bar_user-name
      .top
        .top__items
          .top__items_name
            = current_user.name
          .top__items_icons
            = link_to new_group_path do
              = icon('fas', 'edit')
            = link_to edit_user_path(current_user) do
              = icon('fas', 'cog')
    .side__bar_group-list
      - current_user.groups.each do |group|
        .group
          = link_to group_messages_path(group) do
            .group__name
              = group.name
            .group__message
              = group.show_last_message